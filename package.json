{
   "name": "clockware-backend",
   "version": "1.0.0",
   "description": "",
   "main": "index.js",
   "scripts": {
      "start": "ts-node src/server.ts",
      "start:watch": "nodemon",
      "build": "rm -rf ./build && tsc",
      "typeorm": "./node_modules/.bin/ts-node ./node_modules/typeorm/cli.js --config .env",
      "migration:run": "npm run typeorm migration:run",
      "migration:revert": "npm run typeorm migration:revert",
      "migration:generate": "./node_modules/.bin/ts-node ./node_modules/typeorm/cli.js --config .env migration:generate -n"
   },
   "author": "",
   "license": "ISC",
   "dependencies": {
      "body-parser": "^1.19.0",
      "cors": "^2.8.5",
      "dotenv": "^8.2.0",
      "express": "^4.17.1",
      "joi": "^17.1.1",
      "pg": "^8.3.0",
      "reflect-metadata": "^0.1.10",
      "typeorm": "0.2.25",
      "mysql": "^2.14.1"
   },
   "devDependencies": {
      "@types/cors": "^2.8.6",
      "@types/express": "^4.17.7",
      "@types/joi": "^14.3.4",
      "@types/node": "^8.0.29",
      "eslint": "^7.4.0",
      "express-validator": "^6.6.0",
      "nodemon": "^2.0.4",
      "ts-node": "3.3.0",
      "tslint": "^6.1.2",
      "typescript": "3.3.3333"
   },
   "nodemonConfig": {
      "ignore": [
         "**/*.test.ts",
         "**/*.spec.ts",
         ".git",
         "node_modules"
      ],
      "watch": [
         "src"
      ],
      "exec": "npm run build && npm start",
      "ext": "ts"
   }
}
